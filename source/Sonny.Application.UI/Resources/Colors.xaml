<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Basic Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="PrimaryLightColor">#40A6FF</Color>
    <Color x:Key="DangerColor">#DC3545</Color>
    <Color x:Key="BorderDarkColor">#ADB5BD</Color>
    <Color x:Key="ForegroundLightColor">#6C757D</Color>

    <!-- SolidColorBrush Resources -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="BorderDarkBrush" Color="{StaticResource BorderDarkColor}" />
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLightColor}" />

</ResourceDictionary>
