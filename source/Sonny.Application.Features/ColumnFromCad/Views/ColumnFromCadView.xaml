<Window x:Class="Sonny.Application.Features.ColumnFromCad.Views.ColumnFromCadView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Sonny.Application.Features.ColumnFromCad.ViewModels"
        mc:Ignorable="d"
        Title="{DynamicResource WindowTitle}"
        Height="580"
        Width="500"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance {x:Type viewModel:ColumnFromCadViewModel}, IsDesignTimeCreatable=True}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Layer Selection -->
                <GroupBox Header="{DynamicResource GroupBoxLayerSelection}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelSelectLayer}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AllLayerNames}"
                                  SelectedItem="{Binding SelectedLayer}"
                                  Margin="5,5,0,5" />

                        <RadioButton Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                     Content="{DynamicResource LabelModelByHatch}"
                                     IsChecked="{Binding IsModelByHatch}"
                                     Margin="0,5" />

                        <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                     Content="{DynamicResource LabelModelByBoundary}"
                                     IsChecked="{Binding IsModelByBoundary}"
                                     Margin="0,5" />
                    </Grid>
                </GroupBox>

                <!-- Column Family Selection -->
                <GroupBox Header="{DynamicResource GroupBoxColumnFamily}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelRectangularColumnFamily}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AllColumnFamilies}"
                                  SelectedItem="{Binding SelectedRectangularColumnFamily}"
                                  DisplayMemberPath="Name"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LabelWidthParameter}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="1" Grid.Column="1"
                                  ItemsSource="{Binding AllRectangularColumnTypeParameters}"
                                  SelectedItem="{Binding WidthParameter}"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource LabelHeightParameter}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="2" Grid.Column="1"
                                  ItemsSource="{Binding AllRectangularColumnTypeParameters}"
                                  SelectedItem="{Binding HeightParameter}"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource LabelCircularColumnFamily}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding AllColumnFamilies}"
                                  SelectedItem="{Binding SelectedCircularColumnFamily}"
                                  DisplayMemberPath="Name"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{DynamicResource LabelDiameterParameter}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="4" Grid.Column="1" ItemsSource="{Binding AllCircularColumnTypeParameters}"
                                  SelectedItem="{Binding DiameterParameter}"
                                  Margin="5,5,0,5" />
                    </Grid>
                </GroupBox>

                <!-- Level Selection -->
                <GroupBox Header="{DynamicResource GroupBoxLevels}" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="150" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource LabelBaseLevel}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="0" Grid.Column="1" ItemsSource="{Binding AllLevels}"
                                  SelectedItem="{Binding BaseLevel}"
                                  DisplayMemberPath="Name"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource LabelBaseOffset}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BaseOffsetDisplay}" Margin="5,5,0,5" />

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource LabelTopLevel}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding AllLevels}"
                                  SelectedItem="{Binding TopLevel}"
                                  DisplayMemberPath="Name"
                                  Margin="5,5,0,5" />

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource LabelTopOffset}"
                                   VerticalAlignment="Center" Margin="0,5" />
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding TopOffsetDisplay}" Margin="5,5,0,5" />
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Content="{DynamicResource ButtonOK}"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Command="{Binding ExecuteCommand}" />
            <Button Content="{DynamicResource ButtonCancel}"
                    Width="80"
                    Height="30"
                    Command="{Binding CancelCommand}" />
        </StackPanel>
    </Grid>
</Window>
